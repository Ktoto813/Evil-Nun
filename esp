local itemNames = {
    ["golden key"] = true,
    ["small cabel"] = true,
    ["shovel key-card"] = true,
    ["pink key"] = true,
    ["blue key"] = true,
    ["heaven bible"] = true,
    ["cogwheel"] = true
}
local killerNames = { -- Добавь сюда точные имена моделей/чар киллеров
    ["evil nun"] = true,
    ["nun"] = true,
    ["killer"] = true
}

local espEnabled = false
local highlighted = {}

-- Хайлайт предмета
local function highlightItem(obj)
    if not highlighted[obj] then
        local hl = Instance.new("Highlight")
        hl.Adornee = obj
        hl.FillColor = Color3.fromRGB(0, 255, 255)
        hl.OutlineColor = Color3.fromRGB(255, 255, 0)
        hl.FillTransparency = 0.2
        hl.OutlineTransparency = 0
        hl.Parent = obj
        highlighted[obj] = hl
    end
end

-- Хайлайт игрока
local function highlightPlayer(char)
    if not highlighted[char] then
        local hl = Instance.new("Highlight")
        hl.Adornee = char
        hl.FillColor = Color3.fromRGB(80, 150, 255)
        hl.OutlineColor = Color3.fromRGB(50, 180, 255)
        hl.FillTransparency = 0.25
        hl.OutlineTransparency = 0
        hl.Parent = char
        highlighted[char] = hl
    end
end

-- Хайлайт киллера
local function highlightKiller(char)
    if not highlighted[char] then
        local hl = Instance.new("Highlight")
        hl.Adornee = char
        hl.FillColor = Color3.fromRGB(255, 30, 30)
        hl.OutlineColor = Color3.fromRGB(255, 0, 0)
        hl.FillTransparency = 0.05
        hl.OutlineTransparency = 0
        hl.Parent = char
        highlighted[char] = hl
    end
end

local function removeHighlights()
    for obj,hl in pairs(highlighted) do
        if hl and hl.Parent then
            hl:Destroy()
        end
    end
    table.clear(highlighted)
end
